{% block dashboard_current %}
    <nav aria-label="breadcrumb">
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="{{ path('loueur_panel') }}">Panel</a></li>
            <li class="breadcrumb-item active" aria-current="page">Locations</li>
        </ol>
    </nav>
{% endblock %}
{% block dashboard_body %}
    <h1 class="h2">Locations en cours</h1>
    <div class="row">
        <div class="col">
            <div class="card rounded shadow-sm border-0">
                <div class="card-body">
                    <div class="table-responsive">
                        <table class="table table-hover">
                            <thead>
                            <tr>
                                <th scope="col">#</th>
                                <th scope="col">Modèle</th> <!-- Idées : https://bootsnipp.com/snippets/Veob -->
                                <th scope="col">Dates</th>
                                <th scope="col">Montant</th>
                                <th scope="col">Paiement</th>
                                <th scope="col">Statut</th>
                                <th scope="col"></th>
                            </tr>
                            </thead>
                            <tbody>
                            {% for l in locations %}
                                <tr class='clickable-row' data-href='{{ path('loueur_location_recap', { 'id': l.location.id }) }}' style="cursor: pointer;">
                                    <th scope="row">{{ l.location.id }}</th>
                                    <td>{{ l.location.vehicule.type.name }}</td>
                                    <td>{{ l.location.dateDebut|date("m/d/Y") }}
                                        {% if not l.location.estReccurent %}
                                            - {{ l.location.dateFin|date("m/d/Y") }}
                                        {% else %}
                                            <span class="badge badge-warning">Mensuel</span>
                                        {% endif %}</td>
                                    <td>
                                        {{ l.location.prix }} €
                                        {% if l.location.estReccurent %}
                                            /mois
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if l.location.estPayee %}
                                            <span class="badge badge-success">Payée</span>
                                        {% else %}
                                            <span class="badge badge-danger">En attente du paiement</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if l.enCours%}
                                            <span class="badge badge-primary">En cours</span>
                                        {% elseif l.NonCommence %}
                                            <span class="badge badge-warning">Réservé</span>
                                        {% else %}
                                            <span class="badge badge-secondary">Terminé</span>
                                        {% endif %}
                                    </td>
                                    <td>
                                        {% if l.enCours%}
                                            <span><a href="{{ path('loueur_location_recap', { 'id': l.location.id }) }}" class="btn btn-sm btn-primary">Détails <i class="fas fa-plus-square"></i></a></span>
                                        {% endif %}
                                    </td>
                                </tr>
                            {% endfor %}
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block panel_scripts %}
    <script>
        jQuery(document).ready(function($) {
            $(".clickable-row").click(function() {
                window.location = $(this).data("href");
            });
        });
    </script>
{% endblock %}