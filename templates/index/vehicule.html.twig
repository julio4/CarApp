{% endblock %}

{% block body %}
    <div class="container py-5">
        <div class="row pb-5 mb-4">
            <div class="col">
                <!-- Card-->
                <div class="card rounded shadow-sm border-0">
                    <div class="card-body p-4">
                        <a class="fa_icon" href="{{ path('index_home') }}">
                            <span class="fa fa-angle-left"></span>
                        </a>
                        <div class='row align-items-center'>
                            <div class="col-8">
                                <img src="{{ vich_uploader_asset(type, 'imageFile', 'App\\Entity\\TypeVehicule') | imagine_filter('thumb_4_3') }}" alt="" class="img-fluid d-block mx-auto mb-3">
                            </div>
                            <div class="col-4">
                                <h5>{{ type.name }}</h5>
                                {% if vehicules|length > 1 %}
                                    <p class="small text-muted font-italic"><strong>{{ vehicules|length }}</strong> disponibles</p>
                                {% else %}
                                    <p class="small text-muted font-italic"><strong>{{ vehicules|length }}</strong> disponible</p>
                                {% endif %}
                            </div>
                        </div>
                        {{ form_start(form) }}

                        <div class="my-custom-class-for-errors">
                            {{ form_errors(form) }}
                        </div>

                            <div class="form-row align-items-center">
                                <div class="form-group col-xl-3 col-md-12 col-xs-12 input">
{#                                    TODO mise en page ici#}
                                    {% if estReccurent %}
                                        <span>Réservation récurrente: paiement mensuel à -10% à partir du {{ savedDates.Debut }}</span>
                                    {% else %}
                                        <span>Location du {{ savedDates.Debut }} au {{ savedDates.Fin }}</span>
                                    {% endif %}
                                </div>
                                {#TODO Trier les résultats#}
