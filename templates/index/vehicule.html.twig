{#                                    <select class="form-control" id="sel3">#}
{#                                        <option>1</option>#}
{#                                        <option>2</option>#}
{#                                        <option>3</option>#}
{#                                        <option>4</option>#}
{#                                    </select>#}
{#                                </div>#}
{#                                <div class="form-group col-xl-3 col-md-6 col-xs-12">#}
{#                                    <label for="sel4">Critères 4:</label>#}
{#                                    <select class="form-control" id="sel4">#}
{#                                        <option>1</option>#}
{#                                        <option>2</option>#}
{#                                        <option>3</option>#}
{#                                        <option>4</option>#}
{#                                    </select>#}
{#                                </div>#}
                            </div>
                            <input name="hiddenDate" class="currentDate" type="hidden" hidden>
                            <input class="btn btn-primary float-right" type="submit" value="Afficher les résultats">
                        {{ form_end(form) }}

                        <div class="container-fluid py-5">

                            {% for message in app.flashes('success') %}
                                <div class="alert alert-success">
                                    {{ message|raw }}
                                </div>
                            {% endfor %}
                            {% for message in app.flashes('danger') %}
                                <div class="alert alert-danger">
                                    {{ message|raw }}
                                </div>
                            {% endfor %}

                            {% for vehicule in vehicules %}
                            <hr>
                            <div class="row">
                                <div class="col-md-12">
                                    <form id="vehicule_{{ vehicule.id }}" action="{{ path('location_louer', {'id': vehicule.id} ) }}" method="post">

                                        <label for="date_{{ vehicule.id }}" hidden></label>
                                        <input id="date_{{ vehicule.id }}" name="date" class="inputDate" hidden>
                                        <h3>
                                            {{ type.name }}
                                        </h3>

{#                                        <p class="small text-muted">Loueur: <a href="loueur.html">{{ vehicule.loueur.name }}</a></p>#}
                                        <div class="row">
                                            <div class="col-md-4">
                                                <img class="img-fluid d-block rounded" alt="{{vehicule['image.name']}}"
                                                     src="{{ vich_uploader_asset(vehicule, 'imageFile', 'App\\Entity\\Vehicule') | imagine_filter('thumb_4_3') }}" />
                                            </div>
                                            <div class="col-md-4">
                                                <dl>
                                                    {% for key, descr in vehicule.carac %}
                                                        <dt>
                                                            {{ key }}
                                                        </dt>
                                                        <dd>
                                                            {{ descr }}
                                                        </dd>
                                                        <br />
                                                    {% endfor %}
                                                </dl>
                                            </div>
                                            <div class="col-md-4">
{#                                                //TODO Mise en page#}
                                                {% if estReccurent %}
                                                    <h3 class="text-center">{{ vehicule.prix * 0.9 * 30}} €/mois</h3>
                                                    <small class="text-center">{{ vehicule.prix * 0.9 }} €/jours -10%</small>
                                                {% elseif days >= 30 %}
                                                    <h3 class="text-center">{{ vehicule.prix * 0.9 * days }} €</h3>
                                                    <small class="text-center">{{ vehicule.prix * 0.9 }} €/jours -10%</small>
                                                {% else %}
                                                    <h3 class="text-center">{{ vehicule.prix * days }} €</h3>
                                                    <small class="text-center">{{ vehicule.prix }} €/jours</small>
                                                {% endif %}
                                                {# TODO Lien panier#}
{#                                                <label for="form_select_{{ loop.index - 1 }}" class="btn btn-main btn-outline-primary m-2 px-2">Ajouter au panier</label>#}
